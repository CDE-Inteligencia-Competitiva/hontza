function set_idea_default_value_enlace($v,$f,$nid){
    if(!empty($nid)){
        return $v;
    }
    if(empty($v)){
        $param=arg(3);
        if(!empty($param) && is_numeric($param)){
            $node=node_load($param);
            if(isset($node->nid) && !empty($node->nid)){
                if($f=='title'){
                    return $node->$f;
                }else{
                    return 'http://'.$_SERVER['HTTP_HOST'].base_path().'node/'.$param;
                }
            }
        }
        return '';
    }
    return $v;
}
