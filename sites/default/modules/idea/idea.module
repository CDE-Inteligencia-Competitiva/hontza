    $num=count($required_fields);
    if($num<1){
        $required_fields=create_invitado_fields();
    }
    $num=count($required_fields);
    if($num>0){
      $empty_array=array();
      foreach($required_fields as $i=>$f){
        if(empty($node->$f)){
