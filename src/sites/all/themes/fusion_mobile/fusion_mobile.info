name = Fusion Mobile
description = Fusion Mobile sub-theme. Requires <a href="http://drupal.org/project/fusion">Fusion Core</a> and the <a href="http://drupal.org/project/skinr">Skinr</a> module to enable easy point-and-click theming.
base theme = fusion_core
core = 6.x
engine = phptemplate

stylesheets[all][] = css/fusion-mobile-style.css

regions[header] = header
regions[primary_menu] = primary menu
regions[content_top] = content top
regions[content] = content
regions[footer] = footer

features[] = logo
features[] = name
features[] = slogan
features[] = node_user_picture
features[] = comment_user_picture
features[] = search
features[] = favicon

; Default theme settings
settings[theme_grid] = grid12-fluid
settings[theme_grid_options][] = grid12-fluid
settings[theme_font_size] = font-size-14

; Sidebars not in mobile version
;settings[sidebar_layout] = 
;settings[sidebar_first_width] = 
;settings[sidebar_last_width] = 

; Inherit Skinr styles from Fusion Core
skinr[options][inherit_skins] = FALSE

; A few width options for mobile theme
skinr[grid12-width][title] = Width
skinr[grid12-width][type] = select
skinr[grid12-width][features][] = block
skinr[grid12-width][options][1][label] = 33%
skinr[grid12-width][options][1][class] = grid12-4
skinr[grid12-width][options][2][label] = 50%
skinr[grid12-width][options][2][class] = grid12-6
skinr[grid12-width][options][2][label] = 100%
skinr[grid12-width][options][2][class] = grid12-12 fusion-clear

; Content alignment
skinr[fusion-content-alignment][title] = Content alignment
skinr[fusion-content-alignment][type] = select
skinr[fusion-content-alignment][description] = Default is left aligned content
skinr[fusion-content-alignment][options][1][label] = Center align content within its container
skinr[fusion-content-alignment][options][1][class] = fusion-center-content
skinr[fusion-content-alignment][options][2][label] = Right align content within its container
skinr[fusion-content-alignment][options][2][class] = fusion-right-content

; List styles
skinr[fusion-multicol][title] = List columns
skinr[fusion-multicol][type] = select
skinr[fusion-multicol][description] = Put items in lists (menus, list views, etc.) in multiple columns
skinr[fusion-multicol][features][] = block
skinr[fusion-multicol][features][] = panels_display
skinr[fusion-multicol][features][] = panels_pane
skinr[fusion-multicol][features][] = panels_panel
skinr[fusion-multicol][features][] = views_view
skinr[fusion-multicol][options][1][label] = 2-column list/menu (50%/50%)
skinr[fusion-multicol][options][1][class] = fusion-2-col-list clearfix
skinr[fusion-multicol][options][2][label] = 3-column list/menu (33%/33%/33%)
skinr[fusion-multicol][options][2][class] = fusion-3-col-list clearfix

; Additional menu styles
skinr[fusion-menu][title] = Menu layout
skinr[fusion-menu][type] = radios
skinr[fusion-menu][description] = Different layouts and alignment options for your menus
skinr[fusion-menu][features][] = block
skinr[fusion-menu][features][] = panels_display
skinr[fusion-menu][features][] = panels_pane
skinr[fusion-menu][features][] = panels_panel
skinr[fusion-menu][options][1][label] = <span class="preview-text">Single line menu with separators <span class="preview-icon" id="fusion-menu-fusion-inline-menu"></span></span>
skinr[fusion-menu][options][1][class] = fusion-inline-menu
skinr[fusion-menu][options][2][label] = <span class="preview-text">Multi-column menu with bold headers (set menu items to Expanded) <span class="preview-icon" id="fusion-menu-fusion-multicol-menu"></span></span>
skinr[fusion-menu][options][2][class] = fusion-multicol-menu clearfix

; Sample Skinr style (uncomment to use, see Skinr section in CSS)
;skinr[fusion-example-styles][title] = Sample Skinr block styles
;skinr[fusion-example-styles][type] = checkboxes
;skinr[fusion-example-styles][features][] = block
;skinr[fusion-example-styles][options][1][label] = My sample Skinr style
;skinr[fusion-example-styles][options][1][class] = fusion-example-stylename

