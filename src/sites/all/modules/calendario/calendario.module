function calendario_is_arg($konp){
    $param0=arg(0);
    if($param0=='calendario'){
        $param1=arg(1);
        if(empty($konp)){
            return 1;
        }else if(!empty($param1) && $param1==$konp){
            return 1;
        }
    }
    return 0;
}
function calendario_define_next_param($next_arg,$is_prev=0,$is_year=0,$only_year=0){
    $my_array=explode('-',$next_arg);    
    $year='';
    $mes='';
    if(count($my_array)>=2){
        if(isset($my_array[0])){
            $year=$my_array[0];
        }
        if(isset($my_array[1])){
            $mes=$my_array[1];
        }
    }
    if($only_year){
        return $year;
    }
    if($is_prev){
        if($is_year){
            $year=$year-1;
            $mes=1;
        }else{
            if($mes==1){
                $mes=12;
                $year=$year-1;
            }else{
                $mes=$mes-1;
            }
        }
    }else{
        if($is_year){
            $year=$year+1;
            $mes=1;
        }else{
            if($mes==12){
                $mes=1;
                $year=$year+1;
            }else{
                $mes=$mes+1;
            }
        }    
    }
    return $year.'-'.$mes;
}
