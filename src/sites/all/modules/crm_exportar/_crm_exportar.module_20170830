function crm_exportar_is_crm_list_type_activado(){
    if(db_table_exists('crm_exportar_listas_types')){    
      if(db_column_exists('crm_exportar_listas','crm_exportar_listas_types_id')){
        if(defined('_IS_CRM_LIST_TYPE') && _IS_CRM_LIST_TYPE==1){
          return 1;
        }
      }
    }      
   return 0;
}        