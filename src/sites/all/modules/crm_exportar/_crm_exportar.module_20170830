function crm_exportar_my_help(){
  return help_popup_window(500660, 'help',my_get_help_link_object());
}
function crm_exportar_my_help_automatic_tagging($nid=0,$is_fieldset=0){
  $html=array();
  if($is_fieldset){
    $html[]='<div style="float:right;padding-left:5px;">';
  }else{
    $html[]='<div style="float:left;padding-left:5px;">';
  }
  $html[]=help_popup_window($nid, 'help',my_get_help_link_object());
  $html[]='</div>';
  return implode('',$html);
}
