    //
    $my_array[1]['name']='is_todos_noticias_usuario';
    $my_array[1]['label']=t('User News');
    //
    $my_array[2]['name']='is_todos_debates';
    $my_array[2]['label']=t('Discussions');
    //
    $my_array[3]['name']='is_todos_wikis';
