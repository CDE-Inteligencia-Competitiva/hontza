function facilitador_validar($validate,$uid_in='',$description_reject='',$is_deshacer=0){
    global $user;
    if(empty($uid_in)){
        $uid=arg(2);
    }else{
        $uid=$uid_in;
    }
    $timestamp_validate=time();
    $rejected=0;
    if($validate==1){
        $rejected=1;
    }
    //intelsat-2016
    $uid_validate=$user->uid;
    if($is_deshacer){
        $uid_validate=0;
    }
    db_query('UPDATE {users_facilitators} SET validate=%d,uid_validate=%d,timestamp_validate=%d,description_reject="%s",rejected=%d WHERE uid=%d',$validate,$uid_validate,$timestamp_validate,$description_reject,$rejected,$uid); 
    $url='facilitador/facilitadores';
    if(isset($_REQUEST['destination']) && !empty($_REQUEST['destination'])){
        $url=$_REQUEST['destination'];
    }
    if($validate==2){
        facilitador_avisar_facilitador_validado($uid);
    }else{
        facilitador_avisar_facilitador_rechazado($uid);
    }
    drupal_goto($url);    
}
