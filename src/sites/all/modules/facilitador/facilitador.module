            $html[]=l(my_get_icono_action($icono,t('Validate')),'facilitador/validar/'.$r->uid,array('query'=>$destination,'html'=>true));
            $icono='rechazar_facilitador_deshacer';
            $html[]=l(my_get_icono_action($icono,t('Undo')),'facilitador/deshacer/'.$r->uid,array('query'=>$destination,'html'=>true));
        }else{
            $html[]=t('Rejected');
        }    
    }else{
        if(facilitador_is_show_define_facilitadores_acciones()){
            //$icono='validar_facilitador';
            /*$icono='validar_checkbox';
            $html[]=l(my_get_icono_action($icono,t('Validate')),'facilitador/validar/'.$r->uid,array('query'=>$destination,'html'=>true));*/
            $icono='validar_facilitador_gris';
            $html[]=l(my_get_icono_action($icono,t('Validate')),'facilitador/validar/'.$r->uid,array('query'=>$destination,'html'=>true));
            $icono='rechazar_facilitador_gris';
            $html[]=l(my_get_icono_action($icono,t('Reject')),'facilitador/rechazar/'.$r->uid,array('query'=>$destination,'html'=>true));
        }else{
            $html[]=t('Pending');
        }    
    }
    return implode('&nbsp;',$html);
}
