    $row=boletin_grupo_get_boletin_grupo_array_today_row($boletin_grupo_array_today_id);
    if(isset($row->boletin_grupo_array_id) && !empty($row->boletin_grupo_array_id)){
        return $row->boletin_grupo_array_id;
    }
